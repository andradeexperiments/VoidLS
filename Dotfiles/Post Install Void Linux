####FIRST PACKAGES####
sudo xbps-install -Syu
sudo xbps-install -u void-repo-nonfree void-repo-multilib void-repo-multilib-nonfree
sudo xbps-install -Syu
sudo xbps-install -u nvidia nvidia-libs-32bit libgcc-32bit libdrm-32bit libglvnd-32bit libstdc++-32bit xorg-minimal xorg-fonts xorg-apps xorg-input-drivers xorg-video-drivers setxkbmap bspwm sxhkd dmenu alacritty firefox vim gvfs numlockx dunst git nitrogen shotwell mpv ranger

####CREATE FOLDERS FOR CONFIG FILES####
mkdir .config/bspwm && mkdir .config/sxhkd
cp /usr/share/doc/bspwm/examples/bspwmrc .config/bspwm && cp /usr/share/doc/bspwm/examples/sxhkdrc .config/sxhkd && cp /etc/X11/xinit/xinitrc .xinitrc

####CHANGE DEFAULT TERMINAL####
vim .config/sxhkd/sxhkdrc

####EDIT XINITRC####
vim .xinitrc
setxkbmap br &
exec dbus-run-session bspwm

####START THE SYSTEM####
startx

####POLYBAR####
sudo xbps-install -u polybar
mkdir .config/polybar
vim .config/polybar/launch.sh

#!/usr/bin/env sh
killall -q polybar
while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done
polybar -c ~/.config/polybar/config.ini example &

chmod +x ~/.config/polybar/launch.sh

echo '$HOME/.config/polybar/launch.sh &' >> ~/.config/bspwm/bspwmrc

cp /usr/share/examples/polybar/config.ini .config/polybar
